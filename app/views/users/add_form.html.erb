<div class="container">
    <div class="box-heading">
        従業員登録
    </div>
    <div class="box-body">
        <%= form_tag("/users/insert") do %>
            <div class="form-group">
                <label>ユーザID</label>
                <input name ="userid" value="<%= @userid %>" class="form-control bootstrap-form">
            </div>
            <div class="form-group">
                <label>パスワード</label>
                <input type="password" name ="password" value="<%= @password %>" class="form-control bootstrap-form">
            </div>
            <div class="form-group">
                <label>名前</label>
                <input name ="name" value="<%= @name %>" class="form-control bootstrap-form">
            </div>
            <input type="submit" value="新規登録" class="btn btn-default">
        <% end %>
    </div>
</div>